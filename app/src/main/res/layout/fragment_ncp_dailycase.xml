<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/national"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:background="@drawable/bg_item_function"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/sick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sick_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确诊病例"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/sick_man_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="+2988"
                android:textColor="#FF0000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/sick_man"/>

            <ImageView
                android:id="@+id/add_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_up_arrow"
                app:layout_constraintTop_toBottomOf="@+id/sick_man_num"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/add_sick_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/add_icon"
                app:layout_constraintLeft_toRightOf="@+id/add_icon"
                android:layout_marginLeft="10dp"
                tool:text="2988"
                android:textColor="#8B8989"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/seem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seem_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="疑似病例"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/seem_man_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="+2988"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/seem_man"/>

            <ImageView
                android:id="@+id/seem_add_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_up_arrow"
                app:layout_constraintTop_toBottomOf="@+id/seem_man_num"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/add_seem_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/seem_add_icon"
                app:layout_constraintLeft_toRightOf="@+id/seem_add_icon"
                android:layout_marginLeft="10dp"
                tool:text="2988"
                android:textColor="#8B8989"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/dead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dead_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="死亡病例"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/dead_man_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="+2988"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/dead_man"/>

            <ImageView
                android:id="@+id/dead_add_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_up_arrow"
                app:layout_constraintTop_toBottomOf="@+id/dead_man_num"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/add_dead_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/dead_add_icon"
                app:layout_constraintLeft_toRightOf="@+id/dead_add_icon"
                android:layout_marginLeft="10dp"
                tool:text="2988"
                android:textColor="#8B8989"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cure_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="治愈病例"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/cure_man_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tool:text="+2988"
                android:textColor="#00FF00"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cure_man"/>

            <ImageView
                android:id="@+id/cure_add_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_up_arrow"
                app:layout_constraintTop_toBottomOf="@+id/cure_man_num"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/add_cure_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/cure_add_icon"
                app:layout_constraintLeft_toRightOf="@+id/cure_add_icon"
                android:layout_marginLeft="10dp"
                tool:text="2988"
                android:textColor="#8B8989"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/local"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/national"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="2dp"

        android:background="@drawable/bg_item_function"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/local_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/local_city"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="广德"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sick_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="确诊"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/local_sick_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tool:text="0"
                    android:textSize="30sp"
                    android:textColor="#FF0000"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/sick_title"
                    app:layout_constraintRight_toRightOf="@+id/sick_title"
                    app:layout_constraintTop_toBottomOf="@+id/sick_title"
                    android:layout_marginTop="10dp"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/seem_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="疑似"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/local_seem_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tool:text="0"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/seem_title"
                    app:layout_constraintRight_toRightOf="@+id/seem_title"
                    app:layout_constraintTop_toBottomOf="@+id/seem_title"
                    android:layout_marginTop="10dp"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dead_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="死亡"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/local_dead_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tool:text="0"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/dead_title"
                    app:layout_constraintRight_toRightOf="@+id/dead_title"
                    app:layout_constraintTop_toBottomOf="@+id/dead_title"
                    android:layout_marginTop="10dp"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cure_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="治愈"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/local_cure_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tool:text="0"
                    android:textSize="30sp"
                    android:textColor="#00FF00"
                    android:gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/cure_title"
                    app:layout_constraintRight_toRightOf="@+id/cure_title"
                    app:layout_constraintTop_toBottomOf="@+id/cure_title"
                    android:layout_marginTop="10dp"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/provinces_data_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/local"
        android:background="@drawable/button_border"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null">
    </ListView>

</android.support.constraint.ConstraintLayout>
