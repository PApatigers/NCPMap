<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/function_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:src="@color/black" />

    <TextView
        android:id="@+id/function_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/function_global"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cut_line"
        app:layout_constraintLeft_toLeftOf="@id/cut_line"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/cut_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/function_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/function_exra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/function_global_exra"
        android:textColor="#708090"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/cut_line"
        app:layout_constraintLeft_toLeftOf="@+id/function_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>
